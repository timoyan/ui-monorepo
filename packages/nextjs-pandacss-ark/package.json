{
	"name": "nextjs-pandacss-ark",
	"version": "0.1.0",
	"private": true,
	"engines": {
		"node": ">=22.0.0 <23.0.0"
	},
	"scripts": {
		"prepare": "panda codegen",
		"msw:init": "rimraf public/msw && msw init msw/",
		"dev": "rimraf .next && concurrently \"next dev\" \"panda codegen --watch\"",
		"dev:https:custom": "node scripts/ensure-https-certs.js && rimraf .next && concurrently \"next dev --experimental-https -p 443 --experimental-https-key ./certs/local.timotest.com-key.pem --experimental-https-cert ./certs/local.timotest.com.pem\" \"panda codegen --watch\"",
		"build": "panda codegen && next build",
		"start": "next start",
		"test": "vitest",
		"test:run": "vitest run",
		"type-check": "tsc --noEmit",
		"test:report": "vitest run --reporter=default --reporter=html --outputFile=./test-result/test-report.html",
		"test:report:view": "npx --yes serve test-result -l 3131",
		"test:coverage": "vitest run --coverage",
		"test:sonar": "vitest run --coverage",
		"lint:test": "! grep -rE 'toMatch(Inline)?Snapshot' --include='*.test.ts' --include='*.test.tsx' --exclude-dir=node_modules . 2>/dev/null",
		"docker:standalone": "docker build -f Dockerfile -t nextjs-pandacss-ark ."
	},
	"dependencies": {
		"@ark-ui/react": "^5.34.0",
		"@reduxjs/toolkit": "^2.3.0",
		"immer": "^11.0.0",
		"next": "^16.0.0",
		"next-redux-wrapper": "^8.1.0",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-redux": "^9.2.0"
	},
	"devDependencies": {
		"@pandacss/dev": "^0.53.6",
		"@testing-library/dom": "^10.4.0",
		"@testing-library/jest-dom": "^6.1.5",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.5.1",
		"@types/node": "^22.0.0",
		"@types/react": "^19.0.0",
		"@types/react-dom": "^19.0.0",
		"@vitejs/plugin-react": "^5.1.4",
		"@vitest/coverage-istanbul": "^4.0.0",
		"@vitest/coverage-v8": "^4.0.0",
		"@vitest/ui": "^4.0.0",
		"concurrently": "^9.2.1",
		"happy-dom": "^20.0.0",
		"msw": "^2.7.0",
		"postcss": "^8.4.49",
		"rimraf": "^6.0.1",
		"typescript": "^5.9.3",
		"vitest": "^4.0.0",
		"vitest-sonar-reporter": "^3.0.0"
	},
	"msw": {
		"workerDirectory": [
			"msw"
		]
	}
}
