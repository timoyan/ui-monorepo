{
	"root": false,
	"extends": "//",
	"files": {
		"includes": [
			"**",
			"!node_modules",
			"!.next",
			"!styled-system",
			"!test-result",
			"!test-results",
			"!**/mockServiceWorker.js",
			"!next-env.d.ts",
			"!.turbo",
			"!.cache",
			"!coverage",
			"!out",
			"!**/*.tsbuildinfo"
		]
	},
	"linter": {
		"rules": {
			"style": {
				"useFilenamingConvention": {
					"level": "error",
					"options": {
						"filenameCases": [
							"camelCase",
							"kebab-case",
							"PascalCase",
							"export"
						],
						"strictCase": false
					}
				}
			}
		}
	},
	"overrides": [
		{
			"includes": ["pages/**"],
			"linter": {
				"rules": {
					"style": {
						"useFilenamingConvention": "off"
					}
				}
			}
		},
		{
			"includes": [
				"**/*.ts",
				"**/*.tsx",
				"**/*.js",
				"**/*.jsx",
				"!**/node_modules/**",
				"!test/**"
			],
			"linter": {
				"rules": {
					"style": {
						"noRestrictedImports": {
							"level": "error",
							"options": {
								"patterns": [
									{
										"group": ["../*", "../**"],
										"message": "Prefer @/ path alias over relative parent imports (e.g. @/components/..., @/utils/...). Use relative paths only for same-directory files (./)."
									}
								]
							}
						}
					}
				}
			}
		},
		{
			"includes": [
				"components/features/**",
				"!components/features/**/__tests__/**"
			],
			"linter": {
				"rules": {
					"style": {
						"noRestrictedImports": {
							"level": "error",
							"options": {
								"patterns": [
									{
										"group": ["@/components/features/*"],
										"message": "Features cannot import each other. Please compose features through upper layers (e.g., modules, pages)."
									},
									{
										"group": [
											"react-redux",
											"@reduxjs/toolkit",
											"@/core/store",
											"@/apis/*"
										],
										"message": "components/features must not use Redux or RTK Query directly. Use wrapped hooks (e.g. useCart, useFlow) or props instead."
									}
								]
							}
						}
					}
				}
			}
		},
		{
			"includes": [
				"components/composed/**",
				"!components/composed/**/__tests__/**"
			],
			"linter": {
				"rules": {
					"style": {
						"noRestrictedImports": {
							"level": "error",
							"options": {
								"patterns": [
									{
										"group": [
											"@/components/composed/*",
											"@/components/layout/*",
											"@/components/features/*",
											"@/modules/*"
										],
										"message": "components/composed may only compose atomics (plus external libs). Do not depend on layout, features, or modules directly."
									}
								]
							}
						}
					}
				}
			}
		},
		{
			"includes": ["modules/**", "!modules/**/__tests__/**"],
			"linter": {
				"rules": {
					"style": {
						"noRestrictedImports": {
							"level": "error",
							"options": {
								"patterns": [
									{
										"group": ["@/modules/*"],
										"message": "Modules cannot import each other. Please compose through upper layers (e.g., pages)."
									}
								]
							}
						}
					}
				}
			}
		}
	]
}
