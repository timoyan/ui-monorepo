{
	"$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
	"formatter": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"files": {
		"includes": [
			"**",
			"!node_modules",
			"!packages/*/node_modules",
			"!packages/*/build",
			"!packages/*/build-types",
			"!packages/*/.next",
			"!packages/*/dist",
			"!**/mockServiceWorker.js",
			"!**/styled-system",
			"!**/test-result",
			"!**/test-results",
			"!**/next-env.d.ts",
			"!**/coverage",
			"!**/out",
			"!**/*.tsbuildinfo",
			"!.turbo",
			"!.cache"
		]
	}
}
