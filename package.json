{
	"name": "ui-monorepo",
	"private": true,
	"scripts": {
		"lint": "biome lint .",
		"format": "biome format .",
		"prepare": "husky",
		"lint-staged": "lint-staged"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.10"
	},
	"lint-staged": {
		"*.*": [
			"biome format --write --no-errors-on-unmatched",
			"biome lint --write --unsafe --no-errors-on-unmatched"
		]
	}
}
