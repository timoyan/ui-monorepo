{
	"name": "ui-monorepo",
	"private": true,
	"scripts": {
		"lint": "biome lint .",
		"lint:fix": "biome lint --write --unsafe .",
		"format": "biome format .",
		"format:check": "biome format .",
		"format:write": "biome format --write .",
		"check": "biome check .",
		"check:fix": "biome check --write --unsafe .",
		"validate": "biome check .",
		"type-check": "pnpm --filter nextjs-pandacss-ark run type-check",
		"prepare": "husky",
		"lint-staged": "lint-staged",
		"test": "pnpm --filter nextjs-pandacss-ark run test:run",
		"test:unit": "pnpm --filter nextjs-pandacss-ark run test:run",
		"test:sonar": "pnpm --filter nextjs-pandacss-ark run test:sonar",
		"verify-overrides": "node scripts/verify-overrides.js",
		"clean-install": "rm -rf node_modules packages/*/node_modules pnpm-lock.yaml && pnpm install"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@types/node": "^22.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.3.0"
	},
	"lint-staged": {
		"*.*": [
			"biome format --write --no-errors-on-unmatched",
			"biome lint --write --unsafe --no-errors-on-unmatched"
		]
	},
	"pnpm": {
		"overrides": {
			"esbuild": ">=0.25.0"
		},
		"ignoredBuiltDependencies": [
			"msw"
		]
	}
}
